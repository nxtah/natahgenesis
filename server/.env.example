# Server example env (DO NOT COMMIT SECRETS)
PORT=3000
CLIENT_ORIGIN=http://localhost:5173

# Admin guard - simple shared secret header x-admin-key
ADMIN_API_KEY=changeme

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Projects are stored locally in the server under `server/data/projects.json` by default.
# For production, replace this with a proper DB and update the routes accordingly.

# If you want to disable the admin key check and allow public creates/updates (not recommended in production), set:
# PUBLIC_ADMIN=true
PUBLIC_ADMIN=false
